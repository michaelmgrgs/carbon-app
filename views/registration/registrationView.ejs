<%- include('../includes/header') %>
    <title>Registration Form</title>
</head>
<body>
    <div class="main-container">
        <%- include('../includes/sideNav') %>

        <div class="content-container">
            <div class="registration-container">
                <div class="title-logo-con">
                    <h1 class="form-title">Registration Form</h1>
                    <div class="logo">
                        <img src="/images/carbon-logo.png" alt="Logo">
                    </div>
                </div>
                <% if (customError) { %>
                    <div id="error-message" class="error-message-container">
                        <p class="error-message"><%= customError %></p>
                    </div>
                    <script>
                        // Remove the success message container after 3 seconds
                        setTimeout(() => {
                            document.getElementById('error-message').style.display = 'none';
                        }, 3000);
                    </script>
                <% } %>
                <form class="registration-form" method="post" action="/registration/<%= branchName %>?branch=<%= branchName %>">
                    <label class="form-label" for="firstName">First Name:</label>
                    <input class="form-input" type="text" name="firstName" required>

                    <label class="form-label" for="lastName">Last Name:</label>
                    <input class="form-input" type="text" name="lastName" required>

                    <label class="form-label" for="phoneNumber">Phone Number:</label>
                    <input class="form-input" type="text" name="phoneNumber" required>

                    <label class="form-label" for="email">Email:</label>
                    <input class="form-input" type="email" name="email" required>

                    <label class="form-label" for="password">Password:</label>
                    <input class="form-input" type="password" name="password" required>

                    <label class="form-label" for="dateOfBirth">Date of Birth:</label>
                    <input class="form-input datepicker" type="text" name="dateOfBirth" id="dateOfBirth" autocomplete="off" required>

                    <label class="form-label" for="gender">Gender:</label>
                    <select class="form-input" name="gender" required>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                    </select>

                    <label class="form-label" for="residentialArea">Residential Area:</label>
                    <!-- <input class="form-input" type="text" name="residentialArea" required> -->
                    <select class="form-input" name="residentialArea" id="residentialArea" required>
                        <option value="" disabled selected hidden>Please select an option...</option>
                        <option value="Heliopolis">Heliopolis</option>
                        <option value="New Cairo">New Cairo</option>
                        <option value="Nasr City">Nasr City</option>
                        <option value="El Shrouq">El Shrouq</option>
                        <option value="Maadi">Maadi</option>
                        <option value="Down Town">Down Town</option>
                        <option value="Other">Other</option>
                    </select>

                    <button class="submit-button" type="submit">Register</button>
                </form>
                <% if (successMessage) { %>
                    <div id="success-message" class="success-message-container">
                        <p class="success-message"><%= successMessage %></p>
                    </div>
                    <script>
                        // Remove the success message container after 3 seconds
                        setTimeout(() => {
                            document.getElementById('success-message').style.display = 'none';
                        }, 3000);
                    </script>
                <% } %>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="/node_modules/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/node_modules/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>

    <script>
        // Initialize the Bootstrap datepicker
        $('.datepicker').datepicker({
                format: 'dd-mm-yyyy',
                autoclose: true,
                todayHighlight: true
            });
    </script>
</body>
</html>
