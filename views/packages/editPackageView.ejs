<%- include('../includes/header') %>
    <title>Edit Gym Package</title>
</head>
<body>
    <div class="main-container">
        <%- include('../includes/sideNav') %>

        <div class="content-container">
            <div class="gym-packages-list">
                <h1>Edit Gym Package</h1>
                <div class="edit-package-container">
                    <form action="/packages/edit/<%= package.package_id %>/<%= branchName %>?branch=<%= branchName %>" method="post">
                        <label>
                            Branch Name:
                            <select name="branchName" disabled>
                            <option value="<%= package.branch_name %>"><%= package.branch_name %></option>
                            <!-- Other options -->
                            </select>
                        </label>

                        <label>
                            Name:
                            <input type="text" name="name" value="<%= package.name %>" required>
                        </label>

                        <label>
                            Package Type:
                            <select name="packageType" required>
                                <option value="session" <%= package.package_type === 'session' ? 'selected' : '' %>>Session</option>
                                <option value="monthly" <%= package.package_type === 'monthly' ? 'selected' : '' %>>Monthly</option>
                            </select>
                        </label>

                        <label>
                            Session Count:
                            <input type="number" name="sessionCount" min="1" value="<%= package.session_count %>">
                        </label>

                        <label>
                            Validity Period (in days):
                            <input type="number" name="validityPeriod" min="1" value="<%= package.validity_period %>">
                        </label>

                        <label>
                            Price:
                            <input type="number" name="price" step="0.01" min="0" value="<%= package.price %>" required>
                        </label>

                        <label>
                            Start Date:
                            <input type="date" name="startDate" value="<%= package.start_date %>">
                        </label>

                        <label>
                            End Date:
                            <input type="date" name="endDate" value="<%= package.end_date %>">
                        </label>

                        <button type="submit">Update Package</button>
                    </form>
                    <form action="/packages/delete/<%= package.package_id %>/<%= branchName %>?branch=<%= branchName %>" method="post">
                        <button type="submit" class="delete-button red-btn">Delete Package</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
