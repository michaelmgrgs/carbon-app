<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Branch Selection</title>
    <link rel="stylesheet" href="/styles/styles.css">
    <link rel="stylesheet" href="/node_modules/bootstrap/dist/css/bootstrap.min.css">
</head>
<body>
    <%- include('../includes/navbar') %>
    
    <div class="container mt-4">
        <h1>Coach Management</h1>
        
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">Select Branch</h5>
            </div>
            <div class="card-body">
                <p>Please select a branch to manage coaches:</p>
                
                <div class="row">
                    <% branches.forEach(branch => { %>
                        <div class="col-md-4 mb-3">
                            <div class="card">
                                <div class="card-body text-center">
                                    <h5 class="card-title"><%= branch.branch_name %></h5>
                                    <a href="/coaches/branch/<%= branch.branch_name %>" class="btn btn-primary">
                                        Manage Coaches
                                    </a>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </div>
        </div>
    </div>
    
    <script src="/node_modules/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
